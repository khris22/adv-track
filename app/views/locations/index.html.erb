<h2>You have been to <%= @locations.count %> locations</h2>

<table>
    <thead>
        <tr>
            <th>Location</th>
            <th>Adventure Log</th>
        </tr>
    </thead>
    <tbody>
        <% @locations.each do |location| %>
        <tr>
            <td><%= location.city %>, <%= location.state %></td>
            <td><%=link_to "Show Adventures", location_adventures_path(location) %></td>
        </tr>
        <% end %>
    </tbody>
</table><br><br>

