<h2>You have been to <%= @locations.count %> locations</h2>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Location</th>
            <th>Adventure Log</th>
        </tr>
    </thead>
    <tbody>
        <% @locations.each do |location| %>
        <tr>
            <td><%= location.created_at.strftime("%B %d, %Y, %A") %></td> 
            <td><%= location.city %>, <%= location.state %></td>
            <td><%=link_to "Show Adventure", location_adventures_path(location) %></td>
        </tr>
        <% end %>
    </tbody>
</table><br><br>

