<%= form_for @location do |f| %>

    <%= render partial: 'layouts/error_messages', locals: {object: @location} %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %><br><br>

<h4>Add a new adventure!</h4> 
    <%= f.fields_for :adventure do |adv| %>
        <%= adv.label :name %>
        <%= adv.text_field :name %>

        <%= adv.label :recommendation %>
        <%= adv.text_area :recommendation %>

        <%= adv.label :is_wishlist? %>
        <%= adv.check_box :is_wishlist? %>
    <% end %>
 
    <%= f.submit%>
<% end %>