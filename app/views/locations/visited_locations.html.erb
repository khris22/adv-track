<h1>Locations List</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Location</th>
            <th scope="col">Number of TrekIt Users' Log:</th>
        </tr>
    </thead>
    <tbody>
        <% @locations.each do |loc| %>
        <tr>
            <td><%= loc.city %>, <%= loc.state %></td>
            <td><%= loc.users.size %></td>
        </tr>
        <% end %>
    </tbody>
</table><br><br>