<h1>Sign Up</h1>

<%= form_for @user do |f| %>

    <!-- Showing error messages after render -->
    <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Create a New Account'%>
<% end %>